%h3 Welcome to DYMO Label Framework JavaScript Library
.header
	#sampleDesctiption
		%span
			This test shows how to use new Label Framework JavaScript Library to display a WYSIWYG label preview and print it.
			%br
			Change values to your liking.  Values will be saved to Visitors table when printed
		%p
.top
.container
	.row
		#input_form.col-md-4
			= form_for @visitor do |f|
				- if @visitor.errors.any?
					#error_explanation
						%h2= "#{pluralize(@visitor.errors.count, "error")} prohibited this visitor from being saved:"
						%ul
							- @visitor.errors.full_messages.each do |msg|
								%li= msg

				.field
					= f.label :specimen_id
					= f.text_field :specimen_id, autofocus: 'autofocus'
				.field
					= f.label :name
					= f.text_field :name
				.field
					= f.label :dob
					= f.date_select :dob, start_year: Date.today.year - 100
				.actions
					-#= f.submit 'Save'

				.printControls
					#printersDiv
						%label{:for => "printersSelect"} Printer:
						%select#printersSelect
					%p
					#printDiv
						%button#printButton{class: 'btn btn-primary'} Print and Save
					%p


		.col-md-4
			.content
				#labelImageDiv
					%img#labelImage{:alt => "label preview", :src => ""}/
